{
	"name": "pl_copy_backup",
	"properties": {
		"activities": [
			{
				"name": "Copy backup",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "BinarySource",
						"storeSettings": {
							"type": "AzureBlobFSReadSettings",
							"recursive": true,
							"deleteFilesAfterCompletion": false
						},
						"formatSettings": {
							"type": "BinaryReadSettings"
						}
					},
					"sink": {
						"type": "BinarySink",
						"storeSettings": {
							"type": "AzureBlobFSWriteSettings",
							"copyBehavior": "PreserveHierarchy"
						}
					},
					"enableStaging": false
				},
				"inputs": [
					{
						"referenceName": "ds_adls_container_azure_shir",
						"type": "DatasetReference",
						"parameters": {
							"storage_account_uri": {
								"value": "@pipeline().globalParameters.storage_account_datalake_uri",
								"type": "Expression"
							},
							"container_name": {
								"value": "@pipeline().parameters.dataset_name",
								"type": "Expression"
							}
						}
					}
				],
				"outputs": [
					{
						"referenceName": "ds_adls_folder_azure_shir",
						"type": "DatasetReference",
						"parameters": {
							"storage_account_uri": {
								"value": "@pipeline().globalParameters.storage_account_backup_uri",
								"type": "Expression"
							},
							"container_name": {
								"value": "@pipeline().parameters.environment",
								"type": "Expression"
							},
							"folder_name": {
								"value": "@concat('triggertime_',formatDateTime(utcnow(), 'yyyy-MM-ddTHH:mm:sszzz'))",
								"type": "Expression"
							}
						}
					}
				]
			}
		],
		"parameters": {
			"dataset_name": {
				"type": "string",
				"defaultValue": "ingestion"
			},
			"datastore_name": {
				"type": "string"
			},
			"environment": {
				"type": "string",
				"defaultValue": "daily"
			}
		},
		"folder": {
			"name": "cloud"
		},
		"annotations": []
	}
}