{
	"name": "ds_blob_csv_cloud",
	"properties": {
		"description": "Saving CSV to the ADF internal storage account",
		"linkedServiceName": {
			"referenceName": "ls_blob_cloud",
			"type": "LinkedServiceReference",
			"parameters": {
				"storage_account_uri": {
					"value": "@dataset().storage_account_uri",
					"type": "Expression"
				}
			}
		},
		"parameters": {
			"storage_account_uri": {
				"type": "string"
			},
			"container_name": {
				"type": "string"
			},
			"datastore_name": {
				"type": "string"
			},
			"dataset_name": {
				"type": "string"
			},
			"file_name": {
				"type": "string"
			},
			"column_delimiter": {
				"type": "string",
				"defaultValue": ","
			},
			"encoding": {
				"type": "string",
				"defaultValue": "UTF-8"
			},
			"first_row_as_header": {
				"type": "bool",
				"defaultValue": true
			}
		},
		"folder": {
			"name": "cloud"
		},
		"annotations": [],
		"type": "DelimitedText",
		"typeProperties": {
			"location": {
				"type": "AzureBlobStorageLocation",
				"fileName": {
					"value": "@dataset().file_name",
					"type": "Expression"
				},
				"folderPath": "@concat('datastore_', dataset().datastore_name, '/dataset_', dataset().dataset_name)",
				"container": {
					"value": "@dataset().container_name",
					"type": "Expression"
				}
			},
			"columnDelimiter": {
				"value": "@dataset().column_delimiter",
				"type": "Expression"
			},
			"encodingName": {
				"value": "@dataset().encoding",
				"type": "Expression"
			},
			"escapeChar": "\\",
			"firstRowAsHeader": {
				"value": "@dataset().first_row_as_header",
				"type": "Expression"
			},
			"quoteChar": "\""
		},
		"schema": []
	}
}